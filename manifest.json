{
  "manifest_version": 2,
  "name": "Dev Excuses",
  "description": "Get a random excuse from https://api.githunt.io/programmingexcuses",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "https://api.githunt.io/*"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_title": "Gimme an excuse!"
  }
}
